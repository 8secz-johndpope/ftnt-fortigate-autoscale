{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.2",
    "parameters": {
        "FuncAppName": {
            "type": "string",
            "metadata": {
                "description": "The name of the Function App created."
            }
        },
        "CosmosDBName": {
            "type": "string",
            "metadata": {
                "description": "The name of the Cosmos DB that you wish to create. The field can contain only lowercase letters, numbers and the '-' character, and must be between 3 and 31 characters."
            }
        },
        "StorageAccountType": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_GRS",
                "Standard_RAGRS"
            ],
            "metadata": {
                "description": "The Storage Account Type."
            }
        },
        "TenantID": {
            "type": "string",
            "metadata": {
                "description": "Azure Directory ID."
            }
        },
        "SubscriptionID": {
            "type": "string",
            "metadata": {
                "description": "Azure Subscription ID."
            }
        },
        "RestAppId": {
            "type": "string",
            "metadata": {
                "description": "The Application ID for the Registered app. This is under Azure Active Directory > App registrations > {your app}."
            }
        },
        "RestAppSecret": {
            "type": "string",
            "metadata": {
                "description": "This is the password for the Registered app."
            }
        },
        "HeartBeatLossCount": {
            "type": "string",
            "defaultValue": "3",
            "metadata": {
                "description": "Heart Beat Interval Count."
            }
        },
        "ScalingGroupResourceGroupName": {
            "type": "string",
            "metadata": {
                "description": "The name of the Resource Group that the deploy_scaleset.json will be deployed into."
            }
        },
        "ScalingGroupNamePrefix": {
            "type": "string",
            "metadata": {
                "description": "Prefix Name of the VMSS Name(VMSSName) that is given when deploying FGT autoscale template."
            }
        },
        "ScriptTimeout": {
            "type": "string",
            "defaultValue": "230",
            "metadata": {
                "description": "The timeout value for the Azure function script. The default value is 230."
            }
        },
        "LicenseGracePeriod": {
            "type": "string",
            "defaultValue": "600",
            "metadata": {
                "description": "The minimum time between a license is distributed and recycled to re-distribute. Unit is second."
            }
        },
        "ElectionWaitTime": {
            "type": "string",
            "defaultValue": "90",
            "metadata": {
                "description": "The maximum time to wait for a master election to complete. Unit is second."
            }
        },
        "PSKSecret": {
            "type": "securestring",
            "metadata": {
                "description": "Preshare key password for autoscaling configuration."
            }
        },
        "PackageResUrl": {
            "type": "string",
            "metadata": {
                "description": "The public URL of the deployment package zip file that contains the resource used to deploy the Function App. This URL must be accessible by Azure."
            }
        }
    },
    "variables": {
        "location": "[resourceGroup().location]",
        "functionAppName": "[parameters('FuncAppName')]",
        "hostingPlanName": "[parameters('FuncAppName')]",
        "storageAccountName": "[concat(uniquestring(resourceGroup().id), 'azfunctions')]",
        "storageAccountid": "[concat(resourceGroup().id,'/providers/','Microsoft.Storage/storageAccounts/', variables('storageAccountName'))]"
    },
    "resources": [{
            "apiVersion": "2015-04-08",
            "type": "Microsoft.DocumentDb/databaseAccounts",
            "name": "[parameters('CosmosDBName')]",
            "location": "[variables('location')]",
            "properties": {
                "name": "[parameters('CosmosDBName')]",
                "databaseAccountOfferType": "Standard"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('storageAccountName')]",
            "apiVersion": "2016-12-01",
            "location": "[variables('location')]",
            "kind": "Storage",
            "sku": {
                "name": "[parameters('StorageAccountType')]"
            },
            "resources": [{
                    "name": "default/configset",
                    "type": "blobServices/containers",
                    "apiVersion": "2018-03-01-preview",
                    "dependsOn": [
                        "[variables('storageAccountName')]"
                    ]
                },
                {
                    "name": "default/fgt-asg-license",
                    "type": "blobServices/containers",
                    "apiVersion": "2018-03-01-preview",
                    "dependsOn": [
                        "[variables('storageAccountName')]"
                    ]
                }

            ]
        },
        {
            "apiVersion": "2015-04-01",
            "type": "Microsoft.Web/serverfarms",
            "name": "[variables('hostingPlanName')]",
            "location": "[variables('location')]",
            "properties": {
                "name": "[variables('hostingPlanName')]",
                "computeMode": "Dynamic",
                "sku": "Dynamic"
            }
        },
        {
            "apiVersion": "2015-08-01",
            "type": "Microsoft.Web/sites",
            "name": "[variables('functionAppName')]",
            "kind": "functionapp",
            "location": "[variables('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
                "[resourceId('Microsoft.DocumentDb/databaseAccounts', parameters('CosmosDBName'))]",
                "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
            ],
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
                "siteConfig": {
                    "appSettings": [{
                            "name": "AzureWebJobsDashboard",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(variables('storageAccountid'),'2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(variables('storageAccountid'),'2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(variables('storageAccountid'),'2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "WEBSITE_CONTENTSHARE",
                            "value": "[toLower(variables('functionAppName'))]"
                        },
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "beta"
                        },
                        {
                            "name": "WEBSITE_NODE_DEFAULT_VERSION",
                            "value": "8.11.1"
                        },
                        {
                            "name": "RESOURCE_GROUP",
                            "value": "[parameters('ScalingGroupResourceGroupName')]"
                        },
                        {
                            "name": "REST_APP_ID",
                            "value": "[parameters('RestAppId')]"
                        },
                        {
                            "name": "REST_APP_SECRET",
                            "value": "[parameters('RestAppSecret')]"
                        },
                        {
                            "name": "WEBSITE_RUN_FROM_ZIP",
                            "value": "[parameters('PackageResUrl')]"
                        },
                        {
                            "name": "SCALESET_DB_ACCOUNT",
                            "value": "[parameters('CosmosDBName')]"
                        },
                        {
                            "name": "SCALING_GROUP_NAME_PAYG",
                            "value": "[concat(parameters('ScalingGroupNamePrefix'), 'payg')]"
                        },
                        {
                            "name": "SCALING_GROUP_NAME_BYOL",
                            "value": "[concat(parameters('ScalingGroupNamePrefix'), 'byol')]"
                        },
                        {
                            "name": "MASTER_SCALING_GROUP_NAME",
                            "value": "[concat(parameters('ScalingGroupNamePrefix'), 'byol')]"
                        },
                        {
                            "name": "TENANT_ID",
                            "value": "[parameters('TenantID')]"
                        },
                        {
                            "name": "HEART_BEAT_LOSS_COUNT",
                            "value": "[parameters('HeartBeatLossCount')]"
                        },
                        {
                            "name": "REST_API_MASTER_KEY",
                            "value": "[listKeys(resourceId('Microsoft.DocumentDb/databaseAccounts', parameters('CosmosDBName')), '2015-04-08').primaryMasterKey]"
                        },
                        {
                            "name": "REQUIRED_CONFIG_SET",
                            "value": "extraports-yes, extrastaticroutes-yes"
                        },
                        {
                            "name": "UNIQUE_ID",
                            "value": ""
                        },
                        {
                            "name": "CUSTOM_ID",
                            "value": ""
                        },
                        {
                            "name": "FORTIGATE_PSKSECRET",
                            "value": "[parameters('PSKSecret')]"
                        },
                        {
                            "name": "SCRIPT_TIMEOUT",
                            "value": "[parameters('ScriptTimeout')]"
                        },
                        {
                            "name": "GET_LICENSE_GRACE_PERIOD",
                            "value": "[parameters('LicenseGracePeriod')]"
                        },
                        {
                            "name": "ELECTION_WAIT_TIME",
                            "value": "[parameters('ElectionWaitTime')]"
                        },
                        {
                            "name": "AZURE_STORAGE_ACCOUNT",
                            "value": "[variables('storageAccountName')]"
                        },
                        {
                            "name": "AZURE_STORAGE_ACCESS_KEY",
                            "value": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2016-12-01').keys[0].value]"
                        },
                        {
                            "name": "SUBSCRIPTION_ID",
                            "value": "[parameters('SubscriptionID')]"
                        },
                        {
                            "name": "DEBUG_SAVE_CUSTOM_LOG",
                            "value": "true"
                        },
                        {
                            "name": "DEBUG_LOGGER_OUTPUT_QUEUE_ENABLED",
                            "value": "true"
                        }
                    ]
                }
            }
        }
    ]
}
